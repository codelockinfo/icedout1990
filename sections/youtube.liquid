<script>
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 3,
      spaceBetween: 30,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      breakpoints: {
      0: {
        slidesPerView: 1.1,
        spaceBetween: 20,
      },
      375: {
        slidesPerView: 1.1,
        spaceBetween: 20,
      },
      576: {
        slidesPerView: 1.1,
        spaceBetween: 20,
