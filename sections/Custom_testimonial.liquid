<div class="custom_testimonial">
  <div class="container">
    {%- render 'section_title', url: collection.url -%}
    <div class="Main-Coll testi_cls">
      {%- for block in section.blocks -%}
        <div class="custom_testi_mainbox">
          {% if block.settings.testi_img != blank %}
           <div class="custom_testi_box">
            <div class="testi_img_box">
              <img src="{{block.settings.testi_img | img_url:'master'}}" class="testi_img" alt="">
             </div>
             <div class="testi-content">
               <h6 class="testi_h">{{block.settings.testi_h}}</h6>
               <p class="testi_p">{{block.settings.testi_p}}</p>
               <h5 class="testi_cname">{{block.settings.testi_cname}}</h5>
             </div>
           </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

