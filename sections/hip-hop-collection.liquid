<script>
var swiper = new Swiper('.hipslider', {
  slidesPerView: 4,
  freeMode: true,
  slidesPerGroup: 1,
  loop: true,       
  autoplay: {
    delay: 3000,
    disableOnInteraction: false,
  },
  spaceBetween: 30,
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
  breakpoints: {
    0: {
      slidesPerView: 3.1,
      spaceBetween: 10,
    },
    577: {
      slidesPerView: 3,
      spaceBetween: 10,
    },
    768: {
      slidesPerView: 3,
      spaceBetween: 20,
    },
    1020: {
      slidesPerView: 4,
      spaceBetween: 30,
    },
    1100: {
      slidesPerView: 5,
      spaceBetween: 30,
    }
  },
});
</script>
