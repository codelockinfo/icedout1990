      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_img",
          "label": "Collection img"
        },
        {
          "type": "text",
          "id": "collection_text",
          "label": "Collection text"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "Collection url"
        }
      ]
    }
  ],
