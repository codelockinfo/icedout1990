<div class="hip_hop_main_box" style="background-color: {{section.settings.bg_color}};">
  <div class="container">
    {%- render 'hip_hop_title', url: {{section.settings.hip_collection_url}} -%}
    <div class="swiper hipslider">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide hip-hop-box">
            {% if block.settings.bg_img != blank %}
              <div class="hip-hop-img">
                <img src="{{block.settings.bg_img | img_url:'master'}}" class="h_img" alt="">
                <div class="hip_hop_name">
                  <a href="{{block.settings.collection_url}}" class="hip_p">{{ block.settings.collection_text }} </a>
                </div>
              </div>
              {% endif %}
          </div>
        {% endfor %}
       
      </div>
        <!-- Arrows should be outside the swiper-wrapper -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>

{% schema %}
{
