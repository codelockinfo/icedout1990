        }
      ],
      "label": "Design Title:"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "img",
      "settings": [
        {
          "type": "image_picker",
          "id": "Shipping_img",
          "label": "Add image "
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "our shipping partner",
      "settings": {}
    }
  ]
}
{% endschema %}

<script>
  var swiper = new Swiper('.Shippingslider', {
    slidesPerView: 5,
    spaceBetween: 20,
    freeMode: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    breakpoints: {
