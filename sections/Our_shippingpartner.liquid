<div class="our_shipping_partner_section" style="background-color: {{section.settings.bg_color}};">
  <div class="custom_container">
    {%- render 'section_title', url: collection.url -%}
    <div class="shipping_partner_main" style="background-color: {{section.settings.bg_color2}};">
      <div class="swiper Shippingslider">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            {% if block.settings.Shipping_img != blank %}
              <div class="swiper-slide">
                <div class="Shipping_img_box">
                  <img src="{{block.settings.Shipping_img | img_url:'master'}}" alt="" class="Shipping_img">
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "our shipping partner",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section bg color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "bg_color2",
      "label": "Main box bg color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title",
