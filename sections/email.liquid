<div class="email_section">
  <div class="email_main_box">
    <div class="email_content">
      <h1 class="email_h1">{{ section.settings.email_h1 }}</h1>
      <p class="email_p">{{ section.settings.email_p }}</p>
      {%- render 'newsletter',class:'in_flex',btn_icon:"false",newl_des:4,sid:{{ section.id }} -%}
    </div>
    <div class="email_img_box">
      {% if section.settings.email_img != blank %}
      <img src="{{section.settings.email_img | img_url:'master'}}" alt="" class="e-img">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        version="1.1"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        width="32"
        height="auto"
        x="0"
        y="0"
        viewBox="0 0 24 24"
        style="enable-background:new 0 0 512 512"
        xml:space="preserve"
        class=""
      >
        <g><path d="m21.137 11.519-2.726-.779a7.453 7.453 0 0 1-5.151-5.151l-.779-2.726a.52.52 0 0 0-.962 0l-.779 2.726a7.453 7.453 0 0 1-5.151 5.151l-2.726.779a.5.5 0 0 0 0 .962l2.726.779a7.453 7.453 0 0 1 5.151 5.151l.779 2.726a.5.5 0 0 0 .962 0l.779-2.726a7.453 7.453 0 0 1 5.151-5.151l2.726-.779a.5.5 0 0 0 0-.962z" fill="#50727B" opacity="1" data-original="#50727B" class=""></path></g>
      </svg>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "email section",
  "settings": [
    {
      "type": "image_picker",
      "id": "email_img",
      "label": "img"
    },
    {
      "type": "text",
      "id": "email_h1",
      "label": "img"
    },
    {
      "type": "text",
      "id": "email_p",
      "label": "img"
    },
    {
      "type": "text",
      "id": "Btn_text",
      "label": "Button text"
    }
  ],
  "presets": [
    {
      "name": "email section",
      "settings": {}
    }
  ]
}
{% endschema %}
